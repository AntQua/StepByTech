<div class="d-flex justify-content-between align-items-center mb-4 bg-white rounded-4 p-3">
  <h2>Programas</h2>
  <%= link_to 'Novo Programa', new_program_path, class: 'btn btn-primary rounded-4' %>
</div>



<div class="programs-list row">
  <% @programs.each do |program| %>
    <div class="program-card col-md-4 mb-4">
      <div class="card h-100 bg-white rounded-4 d-flex flex-column">
        <div class="card-body flex-grow-1">
          <div class="card-title d-flex justify-content-between align-items-center">
            <h3><%= program.title %></h3>
            <!-- You can add an icon or any additional item on the right side of the card title here. -->
          </div>
          <p class="card-text"><%= program.description %></p>
          <ul class="list-unstyled">
            <li><strong>Data de inicio:</strong> <%= program.begin_date %></li>
            <li><strong>Data de fim:</strong> <%= program.end_date %></li>
          </ul>
        </div>
        <!-- Adding the icon link to the bottom right of the card using Bootstrap -->
        <div class="card-footer border-0 bg-transparent text-end">
          <%= link_to program_path(program) do %>
            <i class="fa-solid fa-circle-info text-success"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
