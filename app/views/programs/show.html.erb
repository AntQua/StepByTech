      </div>
    </div>
  </div>
  <%# Candidatos tab %>
  <div class="row tab-pane fade bg-white rounded-4 m-1 mt-5 p-1" role="tabpanel" id="tab-candidates" data-controller="candidate">
    <div class="d-flex justify-content-end gap-2">
