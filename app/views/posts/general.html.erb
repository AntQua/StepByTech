<div class="galeria-container">
  <h1>GALERIA</h1>
  <div>
    <ul class="d-flex galeria-links">
      <li><a href="" class="active">Todos</a></li>
      <li><a href="">Web Development</a></li>
      <li><a href="">Data Science</a></li>
      <li><a href="">Data Analytics</a></li>
    </ul>
  </div>
  <% @posts.each do |post| %>
    <div class="posts-container">
      <% if post.step %>
        <h2><%= post.step.program.title if post.step.program %></h2>
      <% else %>
        <h2>No associated program</h2>
      <% end %>
      <%= post.title %>
      <%= post.body %>
      <% if post.media_contents.attached? %>
        <div class="media-content">
          <% post.media_contents.each do |media| %>
            <%= image_tag media, class: "media" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%# Lista de todos os posts - Customizar CSS em card_post_galeria %>
  <%# Criar novos posts em admin no dashboard e testar css na galeria %>

  <div data-controller="media-modal">
    <div class="posts-list">
      <% @posts.each do |post| %>
        <%= render partial: "shared/card_post_galeria", locals: { post: post } %>
      <% end %>
    </div>

    <div class="modal fade" id="mediaModal" tabindex="-1" aria-labelledby="mediaModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered"> <!-- Added modal-dialog-centered for centering -->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close">
              <%# <i class="fa-solid fa-circle-xmark"></i> %>
            </button>
          </div>
          <div class="modal-body" data-media-modal-target="modalBody">
            <!-- Content will be dynamically loaded here -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
