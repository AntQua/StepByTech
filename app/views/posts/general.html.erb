<div class="galeria-container">
  <h1>GALERIA</h1>
  <div>
    <ul class="d-flex galeria-links">
      <li><a href="" class="active">Todos</a></li>
      <li><a href="">Web Development</a></li>
      <li><a href="">Data Science</a></li>
      <li><a href="">Data Analytics</a></li>
    </ul>
  </div>

  <div>
    <ul class="nav nav-tabs mb-5">
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-geral">Geral</a>
      </li>
      <li class="nav-item">
         <a class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-events">Eventos</a>
        </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-programs">Programas/Steps</a>
      </li>
    </ul>
  </div>

  <%# Lista de todos os posts - Customizar CSS em card_post_galeria %>
  <%# Criar novos posts em admin no dashboard e testar css na galeria %>

  <div class="tab-content">
    <div class="row tab-pane fade show active" role="tabpanel" id="tab-geral">
      <div data-controller="media-modal">
        <div class="posts-list">
          <% @general_posts.each do |post| %>
            <%= render partial: "shared/card_post_galeria_home", locals: { post: post } %>
          <% end %>
        </div>

        <div class="modal fade" id="mediaModal" tabindex="-1" aria-labelledby="mediaModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered"> <!-- Added modal-dialog-centered for centering -->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close">
                  <%# <i class="fa-solid fa-circle-xmark"></i> %>
                </button>
              </div>
              <div class="modal-body" data-media-modal-target="modalBody">
                <!-- Content will be dynamically loaded here -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row tab-pane fade m-1 mt-5" role="tabpanel" id="tab-events">
      <div data-controller="media-modal">
        <div class="posts-list">
          <% @event_posts.each do |post| %>
            <%= render partial: "shared/card_post_galeria_home", locals: { post: post } %>
          <% end %>
        </div>

        <div class="modal fade" id="mediaModal" tabindex="-1" aria-labelledby="mediaModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered"> <!-- Added modal-dialog-centered for centering -->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close">
                  <%# <i class="fa-solid fa-circle-xmark"></i> %>
                </button>
              </div>
              <div class="modal-body" data-media-modal-target="modalBody">
                <!-- Content will be dynamically loaded here -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row tab-pane fade m-1 mt-5" role="tabpanel" id="tab-programs">
      <div data-controller="media-modal">
        <div class="posts-list">
          <% @program_and_step_posts.each do |post| %>
            <%= render partial: "shared/card_post_galeria_home", locals: { post: post } %>
          <% end %>
        </div>

        <div class="modal fade" id="mediaModal" tabindex="-1" aria-labelledby="mediaModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered"> <!-- Added modal-dialog-centered for centering -->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn-close"  data-bs-dismiss="modal" aria-label="Close">
                  <%# <i class="fa-solid fa-circle-xmark"></i> %>
                </button>
              </div>
              <div class="modal-body" data-media-modal-target="modalBody">
                <!-- Content will be dynamically loaded here -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
