<div class="form-group">
  <%= f.label :program_id, "Programas: " %>
  <%= f.select :program_id,
              @programs.map { |p| [p.title, p.id] },
              { include_blank: "Seleccione um Programa" },
              class: "form-select",
              data: { post_form_target: "program", action: "change->post-form#updateSteps" } %>
</div>

<div class="form-group mb-5">
  <%= f.label :step_id, "Steps: " %>
  <%= f.select :step_id, [],
               { include_blank: "Seleccione um Step" },
               class: "form-select", id: "post_step_id" %>
</div>
