<div class="card-profile container mt-3">
  <%= simple_form_for(@post) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, label: "Titulo", required: true %>
      <%= f.input :body, as: :text, label: "Descrição", required: true %>

      <%= f.input :media_contents, as: :file, label: "Escolher ficheiros de media (Imagens e/ou Videos)", input_html: { multiple: true, accept: 'image/*,video/*' }, direct_upload: true %>

      <%# Event association %>
      <%= f.association :event, collection: Event.where(status: :terminado), prompt: "Publicação não está relacionada com um evento", include_blank: true %>

      <%# Dynamic Program and Step association based on the event selection %>
      <div id="program_and_steps_container">
        <%# This will be populated with AJAX calls based on event selection %>
      </div>
    </div>

    <div class="d-flex justify-content-between py-6 px-9">
      <div class="text-end m-2 pt-3">
        <%= link_to posts_path do %>
          <%= image_tag "arrow-left.svg" %>
        <% end %>
      </div>
      <%= f.button :submit, @post.new_record? ? 'Criar Publicação' : 'Atualizar Publicação', class: "btn-edit-profile text-decoration-none" %>
    </div>
  <% end %>
</div>
