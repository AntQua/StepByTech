<div class="d-flex align-items-center gap-3 mb-3">
  <i class="fa-solid fa-house txt-opac"></i>
  <i class="fa-solid fa-chevron-right txt-opac"></i>
  <%= link_to "Programas", programs_path, class:"txt-links-disabled" %>
  <i class="fa-solid fa-chevron-right txt-links-disabled"></i>
  <%= link_to "Detalhes do programa", program_path(@program.id), class:"txt-links-disabled" %>
  <i class="fa-solid fa-chevron-right txt-opac"></i>
  <%= link_to "Detalhes do step", program_step_path, class:"txt-links-disabled" %>
  <i class="fa-solid fa-chevron-right"></i>
  <p class="m-0 txt-links-actived">Editar</p>
</div>
<h2>Alterar <%= @step.name %></h2>
<div class="card-profile container mt-5">
  <%= simple_form_for [@program, @step], html: { method: :patch }, data: { controller: "datepicker" } do |f| %>
    <!-- Input fields for the step attributes similar to your new.html.erb form -->
    <%= f.input :name, label: "Nome do Step", input_html: { class: 'form-control bg-white' } %>
    <%= f.input :step_order, label: "Ordem do Step", input_html: { class: 'form-control bg-white' } %>
    <div class="custom-control custom-checkbox mb-3">
      <%= f.input :submission, label: "Submission", as: :boolean, input_html: { class: 'custom-control-input' }, label_html: { class: 'custom-control-label' }, wrapper: false %>
    </div>
    <div class="custom-control custom-checkbox mb-3">
      <%= f.input :active, label: "Active", as: :boolean, input_html: { class: 'custom-control-input' }, label_html: { class: 'custom-control-label' }, wrapper: false %>
    </div>
    <%= f.input :description, label: "Descrição", input_html: { class: 'form-control bg-white' } %>
    <%= f.input :format, label: "Formato", collection: ["Online", "Presencial"], prompt: "Selecione um formato", input_html: { class: 'form-control bg-white' } %>
    <div class="mb-3">
      <label for="step[dates]" class="form-label">Escolha as Datas</label>
      <input type="date" required class="datepicker form-control bg-white" name="step[dates]" data-mode="multiple" data-initial-values="<%= @step.dates.map { |date| date.strftime('%d/%m/%Y') }.join(",") %>" />
    </div>
    <div class="row mb-3">
      <div class="col">
        <%= f.input :hour_start, label: "Hora de inicio das sessões", as: :time, input_html: { class: 'form-control bg-white' } %>
      </div>
      <div class="col">
        <%= f.input :hour_finish, label: "Hora de fim das sessões", as: :time, input_html: { class: 'form-control bg-white' } %>
      </div>
    </div>
    <div class="card-footer d-flex justify-content-between py-6 px-9">
      <%= link_to 'Voltar para detalhes do Step', program_step_path(@program, @step), class: 'btn btn-secondary mt-3' %>
      <%= f.submit "Atualizar Step", data: { confirm: 'Você tem certeza?' }, class: "btn-edit-profile" %>
    </div>
  <% end %>
</div>
