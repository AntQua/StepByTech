<div class="auth-container">
  <div class="auth-left-content">
    <%= image_tag "stepbytech-astro2.png", class: "auth-image" %>
  </div>
  <div class="auth-right-content">
    <%= link_to root_path do %>
      <%= image_tag "stepbytech-title-p-500.png", class: "auth-title" %>
    <% end %>

    <p class="mt-5">Esqueceu a sua password?</p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="auth-form">
    <div class="input-group">
      <%= f.error_notification %>
        <%= content_tag(:i, nil, class: "fa-solid fa-envelope auth-icon") %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Email",
                    input_html: { autocomplete: "email" } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Envie-me instruções de redefinição da Password", class: "primary-button"  %>
  </div>
<% end %>

<p style="font-size: 12px" class="text-center mt-3">Voltar ao <%= link_to "Login", new_session_path(resource_name), class:"auth-link" %></p>
