<div class="d-flex align-items-center gap-3 mb-3">
  <i class="fa-solid fa-house"></i>
  <i class="fa-solid fa-chevron-right"></i>
  <p class="m-0">Programas</p>
  <i class="fa-solid fa-chevron-right"></i>
  <p class="m-0">Detalhes</p>
</div>
<h3 class="mb-5">Programa</h3>
<div class= "bg-white rounded-4">
  <div class="p-3 mb-4 d-flex gap-5">
    <div>
      <%= image_tag "image_web_details.png", class: "some css class here" %>
    </div>
    <div>
      <div class="d-flex justify-content-between gap-3">
        <div class="d-flex col align-items-center gap-2">
          <h5><%= @program.title %></h5>
          <%= image_tag "tag_badges_complete.svg" %>
        </div>
        <% if policy(@program).update? %>
          <%= link_to "Editar Programa", edit_program_path(@program), class: "btn-edit-profile text-decoration-none" %>
        <% else %>
          <%= link_to "Candidatar", apply_path(@program.id), class: "btn-edit-profile text-decoration-none" %>
        <% end %>
      </div>
      <p class="card-sub-title-dashboard mb-3"><%= @program.description %></p>
      <div class="d-flex col">
        <div class="d-flex row gap-2">
          <div class="d-flex gap-2 align-items-center">
            <%= image_tag "date_range.png" %>
            <p class="m-0 card-sub-title-dashboard">Data de início da inscrição : <%= @program.registration_start_date.strftime('%d/%m/%Y') %></p>
          </div>
          <div class="d-flex gap-2 align-items-center">
            <%= image_tag "date_range.png" %>
            <p class="m-0 card-sub-title-dashboard">Data de fim da inscrição : <%= @program.registration_end_date.strftime('%d/%m/%Y') %></p>
          </div>
        </div>
        <div class="d-flex row">
          <div class="d-flex gap-2 align-items-center">
            <%= image_tag "date_range.png" %>
            <p class="m-0 card-sub-title-dashboard">Data de início : <%= @program.begin_date.strftime('%d/%m/%Y') %></p>
          </div>
          <div class="d-flex gap-2 align-items-center">
            <%= image_tag "date_range.png" %>
            <p class="m-0 card-sub-title-dashboard">Data de fim: <%= @program.end_date.strftime('%d/%m/%Y') %></p>
          </div>
        </div>
      </div>
      <div class="d-flex gap-2 align-items-center mt-3 gap-5">
        <div class="d-flex gap-2 align-items-center justify-content-between">
          <%= image_tag "user_alt_fill.png" %>
          <p class="m-0 card-sub-title-dashboard">Número máximo de candidatos: <%= @program.registration_limit %></p>
        </div>
        <%# ter certeza que isto abaixo é necessário... %>
        <div class="d-flex gap-2 align-items-center">
          <p class="m-0 card-sub-title-dashboard">Activo: <%= @program.active ? "Sim" : "Não" %></p>
          <p class="m-0 card-sub-title-dashboard">Completo: <%= !@program.completed ? "Programa a decorrer" : "Programa finalizado" %></p>
        </div>
      </div>
    </div>
  </div>
  <div>
    <ul class="nav nav-tabs">
      <%# <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Overview</a>
      </li> %>
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-steps">Steps</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-attributes">Atributos</a>
      </li>
      <%# <li class="nav-item">
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
      </li> %>
    </ul>
  </div>
</div>
<div class="d-flex justify-content-between align-items-center">
  <%= link_to programs_path do %>
    <%= image_tag "arrow_left.png" %>
  <% end %>
</div>
