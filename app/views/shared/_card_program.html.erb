<div class="programs-list row">
  <% @programs.each do |program| %>
    <div class="program-card col-12 col-md-6 col-lg-4 mb-4">
      <div class="card h-100 bg-white rounded-4 d-flex flex-column">
        <div class="card-body flex-grow-1">
          <div class="d-flex justify-content-center align-items-center">
            <%# Image program %>
            <% if program.image.attached? %>
              <%= image_tag program.image, class: "image-program-list" %>
            <% else %>
              <%= image_tag "temp_thumb.jpg", class: "image-program-list", alt: "default image program" %>
            <% end %>
            <%# Image program %>
            <%# <%= image_tag "tag_badges_complete.svg", class: "some css class here" %>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <p class="card-title-dashboard"><%= program.title %></p>
            <!-- You can add an icon or any additional item on the right side of the card title here. -->
          </div>
          <p class="card-sub-title-dashboard mb-4 line-container"><%= program.description %></p>
          <ul class="list-unstyled d-flex gap-3 justify-content-center column flex-md-row flex-sm-column m-2">
            <li class="card-date d-flex flex-column-reverse align-items-center justify-content-center border-dashed dark-gray-border p-2 px-4 col-md-6">
              <p class="m-0"><span>Data inicial<br>
                  <span><%= program.begin_date.strftime('%d/%m/%Y') %></p>
                </li>
                <li class="card-date d-flex flex-column-reverse align-items-center justify-content-center border-dashed dark-gray-border p-2 px-4 col-md-6">
                  <p class="m-0"><span>Data final<br>
                      <span><%= program.end_date.strftime('%d/%m/%Y') %></p>
                    </li>
                  </ul>
                  <!-- Adding the icon link to the bottom right of the card using Bootstrap -->
                  <div class="text-end m-2 pt-3">
                    <%= link_to program_path(program) do %>
                      <%= image_tag "arrow-right.svg" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
