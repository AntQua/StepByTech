<div class="programs-list row">
  <% @programs.each do |program| %>
    <div class="program-card col-md-4 mb-4">
      <div class="card h-100 bg-white rounded-4 d-flex flex-column pt-3">
        <div class="card-body flex-grow-1">
            <div class="d-flex justify-content-between">
                <%= image_tag "logotype_web.png", class: "some css class here" %>
                <%= image_tag "tag_badges_complete.svg", class: "some css class here" %>
            </div>
          <div class="d-flex justify-content-between align-items-center">
            <p class="card-title"><%= program.title %></p>
            <!-- You can add an icon or any additional item on the right side of the card title here. -->
          </div>
          <p class="card-sub-title mb-3"><%= program.description %></p>
          <ul class="list-unstyled d-flex gap-3 justify-content-center">
            <li class="card-date d-flex flex-column-reverse align-items-center justify-content-center border-dashed dark-gray-border p-2 px-4">
              <span>Data de inicio</span></br><%= program.begin_date %>
          </li>
          <li class="card-date d-flex flex-column-reverse align-items-center justify-content-center border-dashed dark-gray-border p-2 px-4">
            <span>Data de fim</span></br> <%= program.end_date %>
        </li>
        </ul>
        <!-- Adding the icon link to the bottom right of the card using Bootstrap -->
        <div class="text-end m-2 pt-3">
            <%= link_to program_path(program) do %>
                <%= image_tag "arrow-right.svg" %>
            <% end %>
        </div>
    </div>
  </div>
</div>
<% end %>
</div>
