<div class="navbar navbar-expand-lg navbar-light navbar-stepbytech" data-controller="navbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "stepbytech-title-p-500.png", class: "stepbytech-nav-logo" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", root_path(anchor: "home"), class: "nav-link",  data: { navbar_target: "link" } %>
        </li>
        <li class="nav-item">
          <%= link_to "Sobre Nós", root_path(anchor: "aboutus"), class: "nav-link", data: { navbar_target: "link" } %>
        </li>
        <li class="nav-item">
          <%= link_to "Programas", root_path(anchor: "programs"), class: "nav-link", data: { navbar_target: "link" } %>
        </li>
        <li class="nav-item">
          <%= link_to "Galeria", general_galeria_path, class: "nav-link", data: { navbar_target: "link" } %>
        </li>
        <li class="nav-item">
          <%= link_to "Patrocinadores", root_path(anchor: "patrocinadores"), class: "nav-link", data: { navbar_target: "link" } %>
        </li>
        <li class="nav-item">
          <%= link_to "FAQ", generalfaqs_path, class: "nav-link", data: { navbar_target: "link" } %>
        </li>
        <li class="nav-item">
          <%= link_to "Contactos", contacts_path, class: "nav-link", data: { navbar_target: "link" } %>
        </li>
      </ul>
      <ul class="navbar-nav">
        <div class="navbar-right">
          <% if user_signed_in? %>
            <div class="d-flex align-items-center flex-column">
              <p class="m-0 fw-bold">OLÁ</p>
              <%= current_user.name %>
            </div>
            <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <% if current_user && current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar, class: "avatar", alt: "avatar profile" %>
                <% else %>
                  <%= image_tag "default_avatar.png", class: "avatar", alt: "default avatar" %>
                <% end %>
            </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
                <%= link_to "Profile", user_profile_path, class: "dropdown-item" %>
                <%= link_to "Notifications", "#", class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
          <div class="d-flex align-items-center gap-2">
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Inscreve-te", new_user_registration_path, class: "nav-button" %>
            </li>
          </div>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
</div>
