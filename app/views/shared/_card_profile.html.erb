<%
  user = current_user unless user&.present?
%>
<div class="card-profile d-flex align-items-center gap-3">
  <% if user && user.avatar.attached? %>
    <%= image_tag user.avatar, class: "avatar-square-s", alt: "avatar profile" %>
  <% else %>
    <%= image_tag "default_avatar.png", class: "avatar-square-s", alt: "default avatar" %>
  <% end %>
  <div class="d-flex row gap-1">
    <p class="m-0"><strong><%= user.name %></strong></p>
    <div class="d-flex justify-content-between">
      <div class="d-flex gap-4">
        <div class="d-flex align-items-center gap-2">
          <i class="fa-solid fa-circle-user"></i>
          <p class="m-0">Developer</p>
        </div>
        <div class="d-flex align-items-center gap-2">
          <i class="fa-solid fa-location-dot"></i>
          <p class="m-0"><%= user.city %></p>
        </div>
        <div class="d-flex align-items-center gap-2">
          <i class="fa-solid fa-envelope"></i>
          <p class="m-0"><%= user.email %></p>
        </div>
      </div>
    </div>
  </div>
</div>
