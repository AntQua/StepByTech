<div class="d-flex align-items-center gap-3 mb-5">
  <i class="fa-solid fa-house txt-opac"></i>
  <i class="fa-solid fa-chevron-right"></i>
  <p class="m-0 txt-links-actived">Eventos</p>
</div>


<div class="bg-white rounded-4 p-4">
  <div class="d-flex justify-content-between align-items-center">
    <h4>Eventos</h4>
    <% if policy(Event).new? %>
      <%= link_to 'Novo Evento', new_event_path, class: 'btn-edit-profile text-decoration-none' %>
    <% end %>
  </div>

  <div class="mt-4">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link text-decoration-none active" id="agendados-event-tab" data-bs-toggle="tab" data-bs-target="#agendados" type="button" role="tab" aria-controls="agendados" aria-selected="false">
          Eventos Agendados
        </a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link text-decoration-none" id="terminados-event-tab" data-bs-toggle="tab" data-bs-target="#terminados" type="button" role="tab" aria-controls="terminados" aria-selected="false">
          Eventos terminados
        </a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link text-decoration-none" id="gallery-event-tab" data-bs-toggle="tab" data-bs-target="#gallery" type="button" role="tab" aria-controls="gallery" aria-selected="false">
          Galeria
        </a>
      </li>
    </ul>
  </div>
</div>



<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="agendados" role="tabpanel" aria-labelledby="agendados-event-tab">
    <h3 class="text-center mt-5 mb-5">Eventos Agendados</h3>
    <div class="programs-list row">
      <% if @agendados_events.any? %>
        <% @agendados_events.each do |event| %>
          <%= render partial: "shared/card_event", locals: { event: event } %>
        <% end %>
      <% else %>
        <p class="text-center">Não há eventos agendados.</p>
      <% end %>
    </div>
  </div>


  <div class="tab-pane fade" id="terminados" role="tabpanel" aria-labelledby="terminados-event-tab">
    <h3 class="text-center mt-5 mb-5">Eventos Terminados</h3>
    <div class="programs-list row">
      <% if @terminados_events.any? %>
        <% @terminados_events.each do |event| %>
          <%= render partial: "shared/card_event", locals: { event: event } %>
        <% end %>
      <% else %>
        <p class="text-center">Não há eventos terminados.</p>
      <% end %>
    </div>
  </div>


  <div class="tab-pane fade" id="gallery" role="tabpanel" aria-labelledby="gallery-event-tab">
    <h3 class="text-center mt-5">Galeria de Publicações de Eventos</h3>
    <div class="posts-list row">
      <% if @event_posts.any? %>
        <% @event_posts.each do |post| %>
          <div class="card bg-white rounded-4 mb-3 p-3">
            <div class="card-header bg-white">
              <div class= "d-flex justify-content-between align-items-center bg-white">
                <h5 class="post-title"><%= post.title %></h5>
                  <% if policy(Post).update? %>
                    <div>
                      <%= link_to edit_post_path(post), class: 'text-primary text-decoration-none me-2' do %>
                        <i class="fa-regular fa-pen-to-square"></i>
                      <% end %>
                      <%= link_to post_path(post), data: { turbo_method: :delete, turbo_confirm: "Tem a certeza que pretende cancelar a publicação #{post.title}?"}, class: 'text-danger me-2' do %>
                        <i class="fa-solid fa-trash"></i>
                      <% end %>
                    </div>
                  <% end %>
                <p class="text-muted"><%= post.created_at.strftime("%d %b %Y") %></p>
              </div>
            </div>
            <div class="card-body">
              <p class="post-text"><%= post.body %></p>
            </div>

            <%# render associations here %>
            <div class="card-body">
              <% if post.event.present? %>
                <p>Evento: <%= post.event.title %></p>
              <% end %>

              <% if post.program.present? %>
                <p>Programa: <%= post.program.title %></p>
              <% end %>


              <% if post.step.present? %>
                <% if post.step.program.present? %>
                  <p>Programa associado ao Step: <%= post.step.program.title %></p>
                <% end %>
                <p>Step <%= post.step.step_order %>: <%= post.step.name %></p>
              <% end %>
            </div>

            <% if post.media_contents.attached? %>
              <div class="card-body">
                <% post.media_contents.each do |media_content| %>
                  <% if media_content.content_type.start_with?('image/') %>
                    <%= image_tag(media_content, width: 150, height: 150, class: 'img-thumbnail me-2') %>
                  <% elsif media_content.content_type.start_with?('video/') %>
                    <video width="320" height="240" controls class="me-2">
                      <source src="<%= url_for(media_content) %>" type="<%= media_content.content_type %>">
                      Your browser does not support the video tag.
                    </video>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center">Não há publicações para eventos.</p>
      <% end %>
    </div>
  </div>
</div>
