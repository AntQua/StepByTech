<div class="d-flex align-items-center gap-3 mb-5">
  <i class="fa-solid fa-house"></i>
  <i class="fa-solid fa-chevron-right"></i>
  <p class="m-0">Eventos</p>
</div>

<% if policy(Event).edit? %> <!-- Check for admin rights -->
  <div class="bg-white rounded-4 p-4">
    <div class="d-flex justify-content-between align-items-center">
      <h4>Eventos</h4>
      <% if policy(Event).new? %>
        <%= link_to 'Novo Evento', new_event_path, class: 'btn-edit-profile text-decoration-none' %>
      <% end %>
    </div>

    <div class="mt-4">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <a class="nav-link text-decoration-none active" id="agendados-event-tab" data-bs-toggle="tab" data-bs-target="#agendados" type="button" role="tab" aria-controls="agendados" aria-selected="false">
            Eventos Agendados
          </a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link text-decoration-none" id="terminados-event-tab" data-bs-toggle="tab" data-bs-target="#terminados" type="button" role="tab" aria-controls="terminados" aria-selected="false">
            Eventos terminados
          </a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link text-decoration-none" id="gallery-event-tab" data-bs-toggle="tab" data-bs-target="#gallery" type="button" role="tab" aria-controls="gallery" aria-selected="false">
            Galeria
          </a>
        </li>
      </ul>
    </div>
  </div>
<% end %>


<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="agendados" role="tabpanel" aria-labelledby="agendados-event-tab">
    <h3 class="text-center mt-5 mb-5">Eventos Agendados</h3>
    <div class="programs-list row">
      <% if @agendados_events.any? %>
        <% @agendados_events.each do |event| %>
          <div class="program-card col-md-4 mb-4">
            <div class="card h-100 bg-white rounded-4 d-flex flex-column pt-3">
              <div class="card-body flex-grow-1">
                <div class="text-center">
                  <%= image_tag event.image.attached? ? url_for(event.image) : "logotype_web.png", class: "align-self-start mr-auto event-logo" %>
                  <div>
                    <div class="text-center mt-2">
                      <% if event.status == "agendado" %>
                        <span class="badge bg-success">Agendado</span>
                      <% elsif event.status == "terminado" %>
                        <span class="badge bg-danger">Terminado</span>
                      <% end %>
                    </div>
                    <h3 class="mx-auto mt-2"><%= event.title %></h3>
                  </div>
                </div>

              <p class="card-sub-title-dashboard mt-3 mb-3"><%= event.description.truncate(50) %></p>

              <div class="d-flex gap-2 align-items-center">
                <%= image_tag "date_range.png" %>
                <p class="m-0 card-sub-title-dashboard"><strong>Data do Evento:</strong> <%= event.date.strftime('%d/%m/%Y') %></p>
              </div>

                <%# <p>
                  <span>Data do Evento: </span> <%= event.date.strftime('%d/%m/%Y') %>
                  <%# <br>
                  <% if event.hour_start && event.hour_finish %>
                    <%# das <%= event.hour_start.strftime('%H:%M') %>
                    <%# ás <%= event.hour_finish.strftime('%H:%M') %>
                  <%# <% end %>
                <%# </p> %>

                <p class="mt-3"><strong>Formato:</strong> <span class="card-sub-title-dashboard"><%= event.event_type.capitalize %></span></p>

                <div class="text-end m-2 pt-3">
                  <%= link_to event_path(event) do %>
                    <%= image_tag "arrow-right.svg" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center">Não há eventos agendados.</p>
      <% end %>
    </div>
  </div>

  <% if policy(Event).edit? %>
    <div class="tab-pane fade" id="terminados" role="tabpanel" aria-labelledby="terminados-event-tab">
      <h3 class="text-center mt-5 mb-5">Eventos Terminados</h3>
      <div class="programs-list row">
        <% if @terminados_events.any? %>
          <% @terminados_events.each do |event| %>
            <div class="program-card col-md-4 mb-4">
              <div class="card h-100 bg-white rounded-4 d-flex flex-column pt-3">
                <div class="card-body flex-grow-1">
                  <div class="text-center">
                    <%= image_tag event.image.attached? ? url_for(event.image) : "logotype_web.png", class: "align-self-start mr-auto event-logo" %>
                    <div>
                      <div class="text-center mt-2">
                        <% if event.status == "agendado" %>
                          <span class="badge bg-success">Agendado</span>
                        <% elsif event.status == "terminado" %>
                          <span class="badge bg-danger">Terminado</span>
                        <% end %>
                      </div>
                      <h3 class="mx-auto mt-2"><%= event.title %></h3>
                    </div>
                  </div>

                <p class="card-sub-title-dashboard mt-3 mb-3"><%= event.description.truncate(50) %></p>

                <div class="d-flex gap-2 align-items-center">
                  <%= image_tag "date_range.png" %>
                  <p class="m-0 card-sub-title-dashboard"><strong>Data do Evento:</strong> <%= event.date.strftime('%d/%m/%Y') %></p>
                </div>

                  <%# <p>
                    <span>Data do Evento: </span> <%= event.date.strftime('%d/%m/%Y') %>
                    <%# <br>
                    <% if event.hour_start && event.hour_finish %>
                      <%# das <%= event.hour_start.strftime('%H:%M') %>
                      <%# ás <%= event.hour_finish.strftime('%H:%M') %>
                    <%# <% end %>
                  <%# </p> %>

                  <p class="mt-3"><strong>Formato:</strong> <span class="card-sub-title-dashboard"><%= event.event_type.capitalize %></span></p>

                  <div class="text-end m-2 pt-3">
                    <%= link_to event_path(event) do %>
                      <%= image_tag "arrow-right.svg" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-center">Não há eventos terminados.</p>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="tab-pane fade" id="gallery" role="tabpanel" aria-labelledby="gallery-event-tab">
    <h3 class="text-center mt-5">TODO : Place events posts here</h3>
  </div>
</div>
